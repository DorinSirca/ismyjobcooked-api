# IsMyJobCooked Backend API Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5000

# OpenAI Configuration (Optional - for AI-powered job analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true
CORS_ENABLED=true

# Database Configuration (for future use)
# DATABASE_URL=your_database_url_here

# Redis Configuration (for future caching)
# REDIS_URL=your_redis_url_here

# External API Keys (for future integrations)
# JOB_API_KEY=your_job_api_key_here
# SALARY_API_KEY=your_salary_api_key_here

# Analytics Configuration
ANALYTICS_ENABLED=true
TRACKING_ENABLED=true

# Meme Generation
MEME_GENERATION_ENABLED=true
DAILY_MEME_ENABLED=true

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false
